; I've seen it
(setq inhibit-spash-screen t)
(setq inhibit-startup-message t)
(setq initial-scratch-message "")

; I never use any of these, so turn them off
(tool-bar-mode 0)
(menu-bar-mode 0)
(scroll-bar-mode 0)

; I know where the mark is, and this is ugly and distracting, so turn it off
(transient-mark-mode 0)
